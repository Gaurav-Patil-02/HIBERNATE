<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
		<property name="hibernate.connection.password">root</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/batch1043?useSSL=false</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="show_sql">true</property>
		<property name="hibernate.hbm2ddl.auto">create</property>

		<mapping class="com.studentmanagement.entities.Student" />
		<mapping class="com.studentmanagement.entities.Course" />
		<mapping class="com.studentmanagement.entities.Department" />
		<mapping class="com.studentmanagement.entities.Instructor" />
		<mapping class="com.studentmanagement.entities.Subject" />
		<mapping class="com.studentmanagement.entities.Enrollment" />
	</session-factory>
</hibernate-configuration>